# Database Configuration
DATABASE_URL=postgresql://mcpuser:mcppassword@localhost:5432/mcp_gsheets

# Google OAuth Configuration (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here

# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
